  <title>{{ title }}</title>
  <script type="module" src="http://localhost:3000/main.js"></script>
  <style>
    .variant {
      border: 1px solid #ddd;
      padding: 1rem;
      margin-bottom: 1rem;
    }
    .variant h2 {
      margin-top: 0;
    }
  </style>
</head>
<body>
  <h1>Preview All</h1>

  {{ yield | safe }}
  
  {# {% if variants and variants.length %}
