        {{ variant.rendered | safe }}
      </div>
    {% endfor %}
  {% else %}
    <div class="variant">
      {% if render %}
          {{ rendered | safe }}
      {% else %}
        <p>No rendered output available.</p>
      {% endif %}
    </div>
  {% endif %} #}
