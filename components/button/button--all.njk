<!-- Mount target for Vue -->
<h1>Buttons</h1>

<!-- This renders inside the preview layout's {{ yield }} -->

{% for variant in ['primary', 'secondary', 'disabled'] %}
  <div
    class="vue-app"
    data-label="{{ variant | capitalize }} Button"
    data-variant="{{ variant }}"
    data-disabled="{{ variant == 'disabled' }}"
  ></div>
{% endfor %}
